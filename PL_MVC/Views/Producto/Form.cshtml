@model DL.Producto

@{
    ViewData["Title"] = "Formulario de Producto";
}

<div class="container">
    <h2>@(Model.IdProducto == 0 ? "Agregar Producto" : "Editar Producto")</h2>
    <form method="post">
        @if (Model.IdProducto != 0)
        {
            <div class="form-group" style="display:none;">
                <label>ID Producto:</label>
                <label asp-for="IdProducto" class="form-control">@Model.IdProducto</label>
            </div>
        }

        <div class="form-group">
            <label>Nombre:</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre de producto" />
        </div>

        <div class="form-group">
            <label>Precio Unitario:</label>
            <input type="number" step="0.01" class="form-control" placeholder="Precio del producto"
                   value="@Model.PrecioUnitario == 0 ? '' : Model.PrecioUnitario.ToString(" 0.00")" />
        </div>

        <div class="form-group">
            <label>Stock:</label>
            <input type="number" class="form-control" placeholder="Cantidad en stock"
                   value="@Model.Stock == 0 ? '' : Model.Stock.ToString()" />
        </div>

        <div class="form-group">
            <label>Proveedor:</label>
            <select asp-for="IdProveedor" class="form-control">
                <option value="">Seleccione un proveedor</option>
                @foreach (var proveedor in ViewBag.Proveedores)
                {
                    <option value="@proveedor.IdProveedor">@proveedor.Nombre</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Departamento:</label>
            <select asp-for="IdDepartamento" class="form-control">
                <option value="">Seleccione un departamento</option>
                @foreach (var departamento in ViewBag.Departamentos)
                {
                    <option value="@departamento.IdDepartamento">@departamento.Nombre</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Descripción:</label>
            <input asp-for="Descripcion" class="form-control" placeholder="Descripción de producto" />
        </div>
        <p></p>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="@Url.Action("GetAll", "Producto")" class="btn btn-danger">Cancelar</a>
    </form>
</div>

