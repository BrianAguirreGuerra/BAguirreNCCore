@model IEnumerable<DL.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container">
    <h2>Almacen</h2>
    <div class="row">
        <div class="col-md-1 offset-md-11">
                <a href="@Url.Action("Form", "Producto")" class="btn btn-success">Agregar</a>
        </div>
    </div>
    <p></p>
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }
    @if (ViewBag.Productos != null)
    {
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th style="display:none;">Id Producto</th>
                    <th style ="text-align: center;">Nombre</th>
                    <th style="text-align: center;">Precio Unitario</th>
                    <th style="text-align: center;">Stock</th>
                    <th style="text-align: center;">Id Proveedor</th>
                    <th style="text-align: center;">Id Departamento</th>
                    <th style="text-align: center;">Descripción</th>
                    <th style="text-align: center;">Editar</th>
                    <th style="text-align: center;">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in ViewBag.Productos)
                {
                    <tr>
                        <td style="display:none;">@producto.IdProducto</td>
                        <td style="text-align: center;">@producto.Nombre</td>
                        <td style="text-align: center;">@producto.PrecioUnitario</td>
                        <td style="text-align: center;">@producto.Stock</td>
                        <td style="text-align: center;">@producto.IdProveedor</td>
                        <td style="text-align: center;">@producto.IdDepartamento</td>
                        <td style="text-align: center;">@producto.Descripcion</td>
                        <td style="text-align: center;">
                            <a href="@Url.Action("Form", "Producto", new { IdProducto = producto.IdProducto })" class="btn btn-warning">Editar</a>
                        </td>
                        <td style="text-align: center;">
                            <a href="@Url.Action("Eliminar", "Producto", new { IdProducto = producto.IdProducto })" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?')">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
